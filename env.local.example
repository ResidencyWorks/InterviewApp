# Local Development Environment Variables
# Copy this file to .env.local and customize for your local setup

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev_secret_key_change_in_production

# =============================================================================
# DATABASE (Supabase - Local Development)
# =============================================================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_local_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_local_supabase_service_role_key

# =============================================================================
# AUTHENTICATION (Local Development)
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_for_local_dev
GOOGLE_CLIENT_SECRET=your_google_client_secret_for_local_dev
GITHUB_CLIENT_ID=your_github_client_id_for_local_dev
GITHUB_CLIENT_SECRET=your_github_client_secret_for_local_dev

# =============================================================================
# EXTERNAL SERVICES (Development Keys)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_for_development
POSTHOG_API_KEY=your_posthog_api_key_for_development
POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=your_sentry_dsn_for_development
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# =============================================================================
# REDIS (Local Development)
# =============================================================================
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_for_dev
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_for_dev

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=true
PLAYWRIGHT_BASE_URL=http://localhost:3000
