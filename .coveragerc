[run]
source = src
omit =
    */node_modules/*
    */dist/*
    */build/*
    */coverage/*
    */test/*
    */__tests__/*
    */__mocks__/*
    */.*
    */vitest.config.*
    */playwright.config.*
    */next.config.*
    */tailwind.config.*
    */postcss.config.*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = coverage/htmlcov

[xml]
output = coverage/coverage.xml
