# InterviewApp Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# DATABASE (Supabase)
# =============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Add your OAuth provider keys here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OpenAI API for AI features
OPENAI_API_KEY=your_openai_api_key_here

# PostHog for analytics
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Stripe for payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# =============================================================================
# REDIS (Upstash)
# =============================================================================
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to true to enable debug logging
DEBUG=false

# Playwright base URL for E2E tests
PLAYWRIGHT_BASE_URL=http://localhost:3000

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel deployment settings
VERCEL_URL=your_vercel_url_here
VERCEL_ENV=development
