// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"customizations": {
		"vscode": {
			"extensions": [
				"biomejs.biome",
				"Prisma.prisma",
				"posthog.posthog-vscode",
				"supabase.postgrestools",
				"1Password.op-vscode"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers-extra/features/lefthook-asdf:1": {},
		"ghcr.io/devcontainers-extra/features/prisma:2": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {},
		"ghcr.io/joshuanianji/devcontainer-features/mount-pnpm-store:1": {}
	},
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"mounts": [
		"source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
	],
	"name": "Node.js & TypeScript",
	"postCreateCommand": "sudo chown node node_modules && pnpm install",
	"remoteUser": "root"
}
