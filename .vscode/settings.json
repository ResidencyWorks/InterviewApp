{
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"cSpell.customDictionaries": {
		"custom-dictionary-workspace": {
			"addWords": true,
			"name": "custom-dictionary-workspace",
			"path": "${workspaceFolder}/.cspell/custom-dictionary-workspace.txt",
			"scope": "workspace"
		}
	},
	"cSpell.ignorePaths": [
		"node_modules/**",
		"dist/**",
		"build/**",
		"public/**",
		"src/assets/**",
		"package-lock.json",
		"pnpm-lock.yaml",
		"package.json",
		"server.js"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.insertSpaces": true,
	"editor.rulers": [80, 120],
	"editor.tabSize": 2,
	"eslint.enable": false,
	"files.exclude": {
		"**/.next": true,
		"**/.pnpm-store": true,
		"**/build": true,
		"**/coverage": true,
		"**/dist": true,
		"**/node_modules": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"search.exclude": {
		"**/.next": true,
		"**/build": true,
		"**/coverage": true,
		"**/dist": true,
		"**/node_modules": true,
		"**/pnpm-lock.yaml": true
	},
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.preferences.includePackageJsonAutoImports": "auto",
	"typescript.suggest.autoImports": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#a27dad",
		"activityBar.background": "#a27dad",
		"activityBar.foreground": "#15202b",
		"activityBar.inactiveForeground": "#15202b99",
		"activityBarBadge.background": "#62593e",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#a27dad",
		"statusBar.background": "#8b5f98",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#a27dad",
		"statusBarItem.remoteBackground": "#8b5f98",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#8b5f98",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#8b5f9899",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
	"peacock.remoteColor": "#8b5f98"
}
