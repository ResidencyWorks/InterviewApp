{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.md",
			"**/*.css",
			"**/*.html",
			"!node_modules",
			"!dist",
			"!.next"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": {
					"level": "off"
				}
			},
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"patterns": [
							{
								"group": ["@/lib/*"]
							},
							{
								"group": ["@/services/*"]
							}
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/domain/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["@app/*"]
									},
									{
										"group": ["@infra/*"]
									},
									{
										"group": ["@infrastructure/*"]
									},
									{
										"group": ["@presentation/*"]
									},
									{
										"group": ["@features/*"]
									}
								]
							}
						}
					}
				}
			}
		},
		{
			"includes": ["src/application/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["@presentation/*"]
									}
								]
							}
						}
					}
				}
			}
		},
		{
			"includes": ["src/app/**/*.{ts,tsx}", "src/presentation/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["@domain/*"]
									}
								]
							}
						}
					}
				}
			}
		}
	]
}
